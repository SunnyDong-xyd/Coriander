<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanicFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttoncall"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="70dp"
        android:text="Call Emergency Contact"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/buttonbreathing"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:text="Breathing Exercises"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncall" />

    <Button
        android:id="@+id/buttongrounding"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:text="Grounding Exercises"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonbreathing" />

    <Button
        android:id="@+id/buttonphysical"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:text="Physical Exercises"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttongrounding" />

    <Button
        android:id="@+id/buttoncalming"
        android:layout_width="345dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:text="Calming Facts"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonphysical" />

</androidx.constraintlayout.widget.ConstraintLayout>